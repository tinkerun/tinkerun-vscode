{
  "name": "tinkerun-vscode",
  "displayName": "Tinkerun",
  "version": "0.1.4",
  "publisher": "tinkerun",
  "description": "A Missing way of running Tinker in Visual Studio Code",
  "keywords": [
    "laravel",
    "tinker",
    "tinkerwell",
    "tinkerun",
    "php"
  ],
  "author": "billyct <billy_allen@126.com>",
  "license": "MIT",
  "main": "./build/extension.js",
  "icon": "resources/icon.png",
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.55.0"
  },
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/tinkerun/tinkerun-vscode"
  },
  "bugs": {
    "url": "https://github.com/tinkerun/tinkerun-vscode/issues"
  },
  "activationEvents": [
    "onCommand:tinkerun.install",
    "onCommand:tinkerun.run"
  ],
  "contributes": {
    "commands": [
      {
        "command": "tinkerun.install",
        "title": "Tinkerun: Install",
        "enablement": "workspaceFolderCount >= 1"
      },
      {
        "command": "tinkerun.run",
        "title": "Tinkerun: Run",
        "icon": "$(debug-start)",
        "enablement": "resourceDirname =~ /\\.tinkerun/ && resourceLangId == php"
      },
      {
        "command": "tinkerun.reconnect",
        "title": "Tinkerun: Reconnect",
        "enablement": "tinkerun.context.isConnected"
      }
    ],
    "keybindings": [
      {
        "command": "tinkerun.run",
        "key": "ctrl+r"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "tinkerun.run",
          "group": "navigation"
        },
        {
          "command": "tinkerun.reconnect",
          "group": "navigation"
        }
      ],
      "editor/title/run": [
        {
          "command": "tinkerun.run"
        }
      ]
    }
  },
  "scripts": {
    "start": "node ./build.js",
    "build": "NODE_ENV=production node ./build.js",
    "test": "jest",
    "lint": "ts-standard \"./src/**/*.ts\"",
    "vscode:prepublish": "yarn build",
    "package": "vsce package --yarn",
    "deploy:vsce": "vsce publish --yarn",
    "deploy:ovsx": "ovsx publish --yarn"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.55.0",
    "esbuild": "^0.11.10",
    "esbuild-jest": "^0.5.0",
    "jest": "^26.6.3",
    "ovsx": "^0.1.0",
    "ts-standard": "^10.0.0",
    "typescript": "^4.2.4",
    "vsce": "^1.87.1",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
